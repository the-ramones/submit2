    <servlet>
        <servlet-name>SessionConversationServlet</servlet-name>
        <servlet-class>dao.servlet.FilterTestServlet</servlet-class>
        <init-param>
            <param-name>dao-factory-class</param-name>
            <param-value>dao.factory.HibernateDaoFactory</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>SessionRequestServlet</servlet-name>
        <servlet-class>dao.servlet.FilterTestServlet</servlet-class>
        <init-param>
            <param-name>dao-factory-class</param-name>
            <param-value>dao.factory.HibernateDaoFactory</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>GlobalController</servlet-name>
        <servlet-class>dao.controller.GlobalController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Company</servlet-name>
        <jsp-file>/company.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>FilterServlet</servlet-name>
        <jsp-file>/filter-view.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>RetryServlet</servlet-name>
        <jsp-file>/retry.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>DbcpServlet</servlet-name>
        <jsp-file>/action/custom-dbcp.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>IndexFlowServlet</servlet-name>
        <servlet-class>dao.controller.IndexFlowServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SessionConversationServlet</servlet-name>
        <url-pattern>/session-per-conversation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SessionRequestServlet</servlet-name>
        <url-pattern>/session-per-request</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DbcpServlet</servlet-name>
        <url-pattern>/custom-dbcp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Company</servlet-name>
        <url-pattern>/company-bean</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FilterServlet</servlet-name>
        <url-pattern>/filter</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RetryServlet</servlet-name>
        <url-pattern>/retry</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GlobalController</servlet-name>
        <url-pattern>/—Åontroller</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IndexFlowServlet</servlet-name>
        <url-pattern>/index-flow</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>/index.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>404</error-code>
        <location>/not-found.html</location>
    </error-page>
    <resource-env-ref>
        <description>EJB CompanyEnterpriseBean</description>
        <resource-env-ref-name>bean/CompanyEnterpriseBeanFactory</resource-env-ref-name>
        <resource-env-ref-type>dao.controller.CompanyEnterpriseBean</resource-env-ref-type>
    </resource-env-ref>
    <resource-env-ref>
        <description>Process sample bean</description>
        <resource-env-ref-name>bean/ProcessBeanFactory</resource-env-ref-name>
        <resource-env-ref-type>dao.bean.ProcessBean</resource-env-ref-type>
    </resource-env-ref>
    
    <resource-ref>
        <res-ref-name>jdbc/lazy-dbcp</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>
